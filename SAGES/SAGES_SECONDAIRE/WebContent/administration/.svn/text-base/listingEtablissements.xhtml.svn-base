<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"    
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://java.sun.com/jsf/core"> 

   <ui:composition template="../WEB-INF/templates/template.xhtml">
   
   <ui:define name="title">
   		SAGES SECONDAIRE | Listing Etablissements
   </ui:define>
   
   <ui:define name="content">
   		<h2>Etablissements</h2>
   		
   		<br/>
   		<p:growl autoUpdate="true" globalOnly="true"/>
   		<p:scrollPanel style="width:100%;">
		 	<h:form id="form1">
   			 
		    	<p:dataTable id="tableetab" value="#{listEtablissementBean.etablissements}" var="etab" emptyMessage="Aucun etablissement enregistré"
		    		paginator="true" widgetVar="tableetab" tableStyleClass="tablelist" >
			  	     
			  	    <f:facet name="header">
			  	    	<p:outputPanel>
			  	    		<h:outputText value="Recherche"/>
	                		<p:inputText id="globalFilter" onkeyup="tableetab.filter()"/> 
	                	</p:outputPanel>
			  	    </f:facet> 
			  	      
	        		<p:column id="code" headerText="Code">  
	            		<h:outputText value="#{etab.codeetablissement}" />  
	        		</p:column> 
	        
	        		<p:column id="acronyme" headerText="Nom">  
	            		<h:outputText value="#{etab.acronyme}(#{etab.nom})" />  
	        		</p:column>
	        
					<p:column id="logo" headerText="Logo">  
			            <p:graphicImage value="#{etab.logo}"/>  
			        </p:column> 
			        
	        
			        <p:column id="option" headerText="Options" width="48"> 
			         	<h:panelGrid columns="3">
				        	
						    <h:link  includeViewParams="true" outcome="addetailetablissement" title="Visualiser" >
						    	<p:graphicImage value="../resources/img/view16.png" style="border:#CCCCCC 1px solid"/>  						        
						    	<f:param name="codeetablissement" value="#{etab.codeetablissement}"/>						    
						    </h:link>
						    
				            <h:link  includeViewParams="true" id="edit"  title="Editer" outcome="admodifieretablissement">  
						        <p:graphicImage value="../resources/img/edit16.png" style="border:#CCCCCC 1px solid"/>   
						        <f:param name="codeetablissement" value="#{etab.codeetablissement}"/>
						    </h:link>
						    
				            <h:link  includeViewParams="true" id="delete" outcome="adsupprimeretablissement" title="Supprimer">  
						        <p:graphicImage value="../resources/img/delete16.png" style="border:#CCCCCC 1px solid"/>
						       <f:param name="codeetablissement" value="#{etab.codeetablissement}"/>
						   </h:link>
			            </h:panelGrid>
			        </p:column> 
			        <f:facet name="footer">
			        	<center>
				 			<p:commandButton value="Imprimer" type="button" icon="ui-icon-print">  
        						<p:printer target="tableetab" />  
    						</p:commandButton> 
    					</center>
			        </f:facet>
				</p:dataTable>
				
				<br/>
   			
				<center>
					<p:commandButton value="Nouvel Etablissement" action="#{navBean.etabcreate}" icon="ui-icon-check"/>
				</center>
				
			</h:form>
  			
			<p:separator/>
			<br/>
   		</p:scrollPanel>
   		
   </ui:define>
   
   </ui:composition>
 
</html>