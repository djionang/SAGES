<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"    
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://java.sun.com/jsf/core"> 

   <ui:composition template="../../WEB-INF/templates/template.xhtml">
   
   <ui:define name="meta">
   		<f:metadata>
	  		<f:viewParam name="codeconvocation" value="#{convocationBean.idconvocation}"/>
	  		<f:event type="preRenderView" listener="#{convocationBean.initConvocation}"/>
		</f:metadata>
    </ui:define>
   
   <ui:define name="title">
   		SAGES SECONDAIRE| Annulation de convocation
    </ui:define>
   
    <ui:define name="content">
    	
    
	    <h2>
	   		<h:outputText value="Annuler la convocation -- Code: #{convocationBean.idconvocation} --"/>
	   	</h2>
    
   	<h:form id="formmodifconvocation">
   	
   	<p:panel id="panel"  style="margin-bottom:10px;"> 
   		<p:panelGrid columns="2" style="width:100%;" id="convocationmodification">	  	    		  
			<h:outputText value="Elève concerné"/>
			<h:outputText value="#{convocationBean.matriculeeleve} - #{convocationBean.nomeleve}"/>
			
   	    	<h:outputText value="Date de délivrance"/>
		 	<h:outputText value="#{convocationBean.datedelivrance}">
		 		<f:convertDateTime pattern="dd/MM/yyyy"/>
		 	</h:outputText>
   	    		
		 	<h:outputText value="Date Rendez-Vous"/>
		 	<h:outputText value="#{convocationBean.dateeffet}">
		 		<f:convertDateTime pattern="dd/MM/yyyy HH:mm"/>
		 	</h:outputText>	    
      		
			<h:outputText value="libelle"/>	
   			<h:outputText value="#{convocationBean.libelle}" />
   			
   	    	<h:outputText value="Motif"/>	            			
      		<h:outputText value="#{convocationBean.description}" id="motif" />     	
	     </p:panelGrid>	
		<br/>										
		  <center>										
		 		<p:commandButton value="Annuler"  id="buttonsubmit" icon="ui-icon-check"  action="#{convocationBean.supprimerConvocation}"/>
		 		<p:commandButton value="Retour à la liste" action="listing" icon="ui-icon-arrowreturnthick-1-w"/>							
		  </center>
	</p:panel>
	
	<p:blockUI block="panel" trigger="buttonsubmit">  
        Annulation...<br />  
    	<p:graphicImage value="/resources/img/ajax-loader.gif"/>  
    </p:blockUI> 
</h:form>
   	
   </ui:define>
   
   </ui:composition>
 
</html>