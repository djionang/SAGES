<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"    
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://java.sun.com/jsf/core"> 

   <ui:composition template="../WEB-INF/templates/template.xhtml">
   
   <ui:define name="meta">
   		<f:metadata>
	  		<f:viewParam name="codeoption" value="#{optionBean.codeOption}" required="true" requiredMessage="Code option non trouvé"/>
	  		<f:event type="preRenderView" listener="#{optionBean.initoption}"/>
		</f:metadata>
    </ui:define>
   
   <ui:define name="title">
   		SAGES SECONDAIRE | Visualisation Option ou série
    </ui:define>
   
    <ui:define name="content">
	    <h2>
	   		<h:outputText value="Option #{optionBean.codeOption}"/>
	   	</h2>
    <br/>
   	<h:form id="formoption">
   	
   	<p:panel id="paneloption"  style="margin-bottom:10px;"> 
   	
   		<p:messages id="messages"/>
   		
	    <p:panelGrid columns="2" style="width:100%;" id="perso">	    
	    				
		 	<h:outputText value="libellé de l'option | Série"/>	            			
      		<h:outputText value="#{optionBean.libelle}" id="libelle"/>
      		
      		<h:outputText value="Niveau concerné"/>
      		<h:outputText value="#{optionBean.codeniveau} (#{optionBean.libelleniveau})"/>
      		
      		
   	    	            			
	     </p:panelGrid>		
		 <br/>
							
		  <center>			  								
		 		<p:commandButton value="Confirmation suppression"  icon="ui-icon-check" id="submitoption" action="#{optionBean.deleteOption}" />
		 </center>
	</p:panel>
	<p:blockUI block="paneloption" trigger="submitoption">  
        Suppression...<br />  
    	<p:graphicImage value="/resources/img/ajax-loader.gif"/>  
    </p:blockUI> 
    
	</h:form>
   
   </ui:define>
   
   </ui:composition>
 
</html>