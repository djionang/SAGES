<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"    
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://java.sun.com/jsf/core"> 

   <ui:composition template="../WEB-INF/templates/template.xhtml">
   
   <ui:define name="title">
   		SAGES SECONDAIRE | Etat Versement par Classe
   </ui:define>
   
   <ui:define name="content">
   		<h2>Etat Versement par Classe</h2>
   		<br/>
   		<h:form>
   		<p:scrollPanel style="width:100%;">
   			
            
	    	<p:dataTable id="tableclasses" value="#{listClasseBean.classes}" var="classe" emptyMessage="Aucune classe enregistrée"
	    		paginator="true" rows="30" rowsPerPageTemplate="30,50,70"   rowIndexVar="index">
		  	        
        		<p:column id="id" headerText="N°" >
					<h:outputText value="#{index+1}"/>
					<f:facet name="footer">
						<h:outputText value="Total:"/>
					</f:facet>
				</p:column>
        
        		<p:column id="libelle" sortBy="#{classe.libelle}" headerText="Libellé">  
            		<h:outputText value="#{classe.libelle}" />  
        		</p:column> 
        
				<p:column id="Effectif" headerText="Effectif">  
		            <h:outputText value="#{classe.contenanceActuelle}" /> 
		            
		            <f:facet name="footer">
					<h:outputText value="#{listClasseBean.total}">
						<f:convertNumber type="currency" currencySymbol="F." />
					</h:outputText>
				</f:facet>
				 
		        </p:column> 
		        
		        <p:column id="Somme attendue" sortBy="#{classe.libelle}" headerText="Libellé">  
            		<h:outputText value="#{classe.libelle}" />  
        		</p:column> 
        		
        		<p:column id="Somme versé" sortBy="#{classe.libelle}" headerText="Libellé">  
            		<h:outputText value="#{classe.libelle}" />  
        		</p:column> 
		
			</p:dataTable>
   		</p:scrollPanel>
   		</h:form>
   </ui:define>
   
   </ui:composition>
 
</html>