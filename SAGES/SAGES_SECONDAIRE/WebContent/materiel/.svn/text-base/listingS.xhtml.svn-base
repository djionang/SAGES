<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"    
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"
      xmlns:f="http://java.sun.com/jsf/core"> 

   <ui:composition template="../WEB-INF/templates/template.xhtml">
   
   <ui:define name="title">
   		SAGES SECONDAIRE | Listing Matériel sortie
   </ui:define>
   
   <ui:define name="content">
   		<h2>Matériels retires</h2>
   		<br/>
   		<h:form>
   		<p:scrollPanel style="width:100%;">
   			
            
	    	<p:dataTable id="tablemateriels" value="#{listSortieMBean.sortiems}" var="materiel" emptyMessage="Aucune sortie enregistrée"
	    		paginator="true" rows="30" rowsPerPageTemplate="30,50,70">
		  	    
		  	    <p:column id="code" sortBy="#{materiel.codemateriel}" headerText="Code">  
            		<h:outputText value="#{materiel.codemateriel}" />  
        		</p:column> 
		  	            
        		<p:column id="desig" sortBy="#{materiel.designation}" headerText="Designation">  
            		<h:outputText value="#{materiel.designation}" />  
        		</p:column> 
        		
        
        		<p:column id="type" headerText="Type Matériel" >  
            		<h:outputText value="#{materiel.typemateriel}"/>  
        		</p:column> 
        		
        		<p:column id="quantite" headerText="Quantité">  
		            <h:outputText value="#{materiel.quantite}">
		            </h:outputText>  
		        </p:column>
        
				<p:column id="quantites" headerText="Quantité sortie">  
		            <h:outputText value="#{materiel.quantiteSortie}">
		            </h:outputText>  
		        </p:column>
		        <p:column id="options" headerText="Options" width="60"> 
		         	<h:panelGrid columns="1">
				        	
					    <h:link  includeViewParams="true" outcome="materielvueS" title="Visualiser" >
					    	<p:graphicImage value="../resources/img/view16.png" style="border:#CCCCCC 1px solid"/>  						        
					    	<f:param name="idsortie" value="#{materiel.idsortie}"/>						    
					    </h:link>
		            </h:panelGrid>
			        
		        </p:column> 
		
			</p:dataTable>
			
			<br/>
   			
			<center>
				<p:commandButton value="Nouvelle sortie" action="#{navBean.sortiemateriel}" icon="ui-icon-check"/>
			</center>
		
		<p:separator/>
		<br/>
   		</p:scrollPanel>
   		</h:form>
   </ui:define>
   
   </ui:composition>
 
</html>